<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TestAAB" >
       
    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:inputType="number"
        android:hint="@string/hint2" />

    <Button
        android:id="@+id/contactsListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getContactsBtn"
        android:layout_marginTop="16dp"
        android:text="@string/Contacts" />

    <Button
        android:id="@+id/getContactsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignTop="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:text="@string/Enter" />

    <TextView
        android:id="@+id/displayContacts1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/contactsListView"
        android:layout_below="@+id/contactsListView" />

    <Button
        android:id="@+id/btnGroups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/contactsListView"
        android:layout_alignLeft="@+id/getContactsBtn"
        android:layout_marginLeft="18dp"
        android:text="@string/Groups" />

</RelativeLayout>
